{
    "manifest_version": 2,
    "name": "Send URL to PyLoad",
    "version": "1.0",
    "description": "Sends the URL of the currently highlighted tab to a PyLoad API server.",
    "permissions": [
        "activeTab"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Send URL to PyLoad",
        "default_popup": "config.html"
    }
}